public class JavaBasics {
   //n is prime onyl when it divides from 1 or number itself
//prime = 2,3,5,7,11,13......
//non prime = 4,6,8,9,10,12,14......
    public static boolean isPrime(int n){
        boolean isPrime = true;
        for(int i=2; i<=n-1; i++){
            if(n%i==0){
                isPrime =false;
                break;
            }
        } 
        return isPrime;
    }
    public static void main (String [] args){
        System.out.println(isPrime(5));
    }
}
